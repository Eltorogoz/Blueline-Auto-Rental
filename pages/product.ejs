<%- include('../base', { body: `
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h3 mb-0">Our Fleet</h1>
      <span class="text-muted small">Click a car to see rate & availability</span>
    </div>
    <div class="row g-4">
      ${products.map(p => `
        <div class="col-12 col-sm-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <img src="${p.image_url}" class="card-img-top" alt="${p.name}" loading="lazy">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">${p.brand} — ${p.name}</h5>
              <p class="card-text text-muted">${p.category} · ${p.description ?? ''}</p>
              <div class="mt-auto">
                <button class="btn btn-outline-primary w-100 show-details-btn" data-id="${p.id}">
                  Show price & availability
                </button>
                <div id="details-${p.id}" class="details collapse mt-3"></div>
              </div>
            </div>
          </div>
        </div>
      `).join('')}
    </div>
  ` }) %>
  